
<%= form_for( [ @book, @review ] ) do |f| %>
  <%= render 'shared/validation_errors', object: @review %>

  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, placeholder: 'Name' %><br />
  <%= f.label :stars %>  
  <% Review::STARS.each do |star| %>
    <%= f.radio_button :stars, star %> <%= star %>
  <% end %><br />
  <%= f.label :comment %><br/>
  <%= f.text_area :comment %><br/>
  <p>
    <%= f.submit %>
    <%= link_to 'Cancel', book_reviews_path(@book), id: 'cancel_review' %>
  </p>
<% end %>
